@{
}

@model List<CRUD_MVC_SQL.Models.Entities.Employee>

<div class="d-flex justify-content-center">
    <div class="col-md-6">
        <h1>Employees</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Position</th>
                    <th>Salary</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.Id</td>
                        <td>@employee.Name</td>
                        <td>@employee.Position</td>
                        <td>@employee.Salary</td>
                        <td>
                            <a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.Id">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
